<%- include('../includes/head.ejs') %>
<main>
    <section>
        <div class="box">
            <form method="post" action="/new-game">
                <div class="form-control">
                    <label for="name">Name</label>
                    <input type="name" name="name" id="name" value="" placeholder="Name" required>
                </div>
                
                <div class="flex row wrap">
                    <% if (friends && friends.length > 0) { %>
                        <% friends.forEach(friend => { %>
                            <div class="flex row align-center">
                                <input type="checkbox" name="friends" id="friend-<%= friend._id %>" value="<%= friend.name %>"/>
                                <label for="friend-<%= friend._id %>"><%= friend.name %></label>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>Noch keine Freunde hinzugef√ºgt.</p>
                    <% } %>
                </div>
                
                <input id="new-game-submit" type="submit" value="Spiel erstellen">
            </form>
        </div>
    </section>
</main>
<%- include('../includes/end.ejs') %>